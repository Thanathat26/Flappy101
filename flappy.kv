
<Background>:
    id: background
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "background2.png"
        Rectangle:
            size: self.width, 200
            pos: self.pos[0], self.pos[1] + self.height - 150
            texture: self.cloud_texture
        Rectangle:
            size: self.width, 250
            pos: self.pos[0], self.pos[1]
            texture: self.floor_texture

    Button:
        text: "Start game"
        pos: [450,400]
        size: 300,100
        id: start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()
    