<FloatLayout>:
    Background:
<Background>:
    id: background
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Background.jpg'
        Rectangle:
            size: self.width, 350
            pos: self.pos[0], self.pos[1] + self.height - 250
            texture: self.cloud_texture
        Rectangle:
            size: self.width, 150
            pos: self.pos[0], self.pos[1]  
            texture: self.floor_texture

    Pipe:
        size_hint: None, None
        size: 64, root.height - 96
        pos: 200, 96
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.2
            Rectangle:
                size: self.size
                pos: self.pos





