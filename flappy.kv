<FloatLayout>:
    Background:
    Pipe:
    Pipe:
    Pipe:
    Pipe:

<Background>:
    id: background
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "background.jpg"
        Rectangle:
            size: self.width, 138
            pos: self.pos[0], self.pos[1] + self.height - 138
            texture: self.cloud_texture
        Rectangle:
            size: self.width, 96
            pos: self.pos[0], self.pos[1]
            texture: self.floor_texture

<Pipe>:
    size_hint: None, None
    size: 64, self.parent.height - 96
    pos: 100, 96
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2
        Rectangle:
            size: self.size
            pos: self.pos