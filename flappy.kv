# flappy.kv
<FloatLayout>:
    Background:

<Background>:
    id: background
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Background.jpg'
        Rectangle:
            size:self.width, 350
            pos: self.pos[0], self.pos[1] + self.height - 250
            texture: self.cloud_texture
        Rectangle:
            size:self.width, 150
            pos: self.pos[0], self.pos[1]  
            texture: self.floor_texture