# File: calc.kv
<MyLayout>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
       
        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "%"
                on_press: root.Math_sight("%")
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "CE"
                on_press: root.remove()
            Button:
                id:cleat
                size_hint: (.2, 2)
                font_size: 32
                text: "C"
                on_press: root.clear()
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "/"
                on_press: root.Math_sight("/")

            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "7"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(7)
                
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "8"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(8)
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "9"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(9)
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "X"
                on_press: root.Math_sight("*")
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "4"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(4)

            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "5"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(5)
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "6"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(6)
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "-"
                on_press: root.Math_sight("-")
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "1"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(1)

            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "2"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(2)
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "3"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(3)
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "+"
                on_press: root.Math_sight("+")
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "+/-"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.p_s()

            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "0"
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.button_press(0)
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "."
                background_color: [0.74, 0.74, 0.74, 1]
                on_press: root.dot()
            Button:
                size_hint: (.2, 2)
                font_size: 32
                text: "="
                background_color:[0.57, 0.57, 0.82, 1]
                on_press:root.equals()