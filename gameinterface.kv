<Mylayout>:
    orientation: "vertical"
    padding: 500
    spacing: 500

    Label:
        id: Flappy
        text: "Choose the game you want to play"
        size_hint: None,None
        size: 1150, 1500
        font_size: 50

    Button:
        text: "Hello"
        font_size: 32
