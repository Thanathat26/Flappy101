<Mylayout>:
    orientation: "vertical"
    size:root.width,root.height
    padding: 50
    spacing: 20

    Label:
        id: Flappy
        text: "Choose the game you want to play"
        size_hint: None,None
        size: 1150, 1500
        font_size: 50

    Button:
        text: "Hello"
        font_size: 32
        size_hint: .5,.5
        pos_hint:{"center_x": 0.5}
        size: 200, 100
        background_color:0,0,0,1,
        on_press: app.run_game()
        Image:
            source: 'Flappyinter1.png'
            size_hint: None,None
            size: 200, 100
            center_x: self.parent.center_x
            center_y: self.parent.center_y
